server {
    server_name changeyourname.mn www.changeyourname.mn;

    root /var/www/changeyourname.mn;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/changeyourname.mn/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/changeyourname.mn/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    listen 80;
    server_name changeyourname.mn www.changeyourname.mn;
    return 301 https://$host$request_uri;
}